<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyGithub" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/github_gray</item>
        <item name="colorPrimaryVariant">@color/github_dark_gray</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/github_light_gray</item>
        <item name="colorSecondaryVariant">@color/github_gray</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="backgroundColor">#AFAFAF</item>
        <item name="android:fontFamily">@font/baloo</item>
    </style>

    <style name="tv_username">
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="background_splashsceen">
        <item name="android:background">@color/github_dark_gray</item>
    </style>

    <style name="label_illustration">
        <item name="android:textColor">@color/github_light_gray</item>
    </style>

    <style name="tabslayout">
        <item name="tabTextColor">@color/white</item>
    </style>

    <style name="toolbar">
        <item name="android:background">@color/github_dark_gray</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
    </style>

    <style name="search_box_container" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:background">@color/github_dark_gray</item>
        <item name="hintTextColor">@color/light_gray</item>
        <item name="boxStrokeColor">@color/light_gray</item>
        <item name="startIconTint">@color/light_gray</item>
        <item name="endIconTint">@color/light_gray</item>
        <item name="android:textColorHint">@color/light_gray</item>
    </style>

    <style name="search_box_edittext" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/light_gray</item>
    </style>

    <style name="follow">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/list_properties</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/half_size</item>
        <item name="android:layout_marginLeft">@dimen/half_size</item>
    </style>

    <style name="drawable">
        <item name="android:tint">@color/github_light_gray</item>
        <item name="backgroundTint">@color/transparant</item>
    </style>

    <style name="loading">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:indeterminateTint">@color/github_gray</item>
        <item name="android:padding">30dp</item>
    </style>

    <style name="btn_favorite">
        <item name="backgroundTint">@color/github_cyan</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <style name="alert_favorite">
        <item name="android:background">@drawable/shape_alert_night</item>
    </style>
</resources>