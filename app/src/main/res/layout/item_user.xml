<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/half_size"
    android:layout_marginHorizontal="@dimen/default_size"
    card_view:cardCornerRadius="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_size">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_avatar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_launcher_background"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_name"
            style="@style/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_size"
            android:text="User Name"
            card_view:layout_constraintStart_toEndOf="@+id/img_avatar"
            card_view:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ic_location"
            style="@style/list_properties"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="@dimen/default_size"
            android:src="@drawable/ic_baseline_place_24"
            card_view:layout_constraintStart_toEndOf="@+id/img_avatar"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_name" />

        <TextView
            android:id="@+id/tv_location"
            style="@style/list_properties"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/half_size"
            android:text="Location"
            card_view:layout_constraintStart_toEndOf="@+id/ic_location"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_name" />

        <ImageView
            android:id="@+id/ic_repository"
            style="@style/list_properties"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="@dimen/default_size"
            android:src="@drawable/ic_baseline_repository_24"
            card_view:layout_constraintStart_toEndOf="@+id/img_avatar"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_location" />


        <TextView
            android:id="@+id/tv_repository"
            style="@style/list_properties"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/half_size"
            android:text="0"
            card_view:layout_constraintStart_toEndOf="@+id/ic_repository"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_location" />

        <TextView
            android:id="@+id/tv_label_repository"
            style="@style/list_properties"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/half_size"
            android:text="Repository"
            card_view:layout_constraintStart_toEndOf="@+id/tv_repository"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_location" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>